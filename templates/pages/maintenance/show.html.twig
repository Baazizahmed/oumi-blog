    <style>
        :root {
            
            --beige-clair: #f5f5dc;
            --vert-medicinal: #2e7d32;
            --gris-fonce: #333333;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--beige-clair);
            color: var(--gris-fonce);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding: 1rem;
            text-align: center;
        }

        .icon {
            font-size: 4rem;
            color: var(--vert-medicinal);
            margin-bottom: 1.5rem;
        }

        h1 {
            font-family: 'Roboto', sans-serif;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--vert-medicinal);
        }

        p {
            font-size: 1.2rem;
            max-width: 500px; 
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }
        }
