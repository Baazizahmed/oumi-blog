{% extends 'themes/base_admin.html.twig' %}

{% block title %}Lire l'article {{post.title}}{% endblock %}

{% block description %}Lire l'article {{post.title}}{% endblock %}

{% block main %}
    <div class="container">
        <div class="text-center">
            {% if post.image %}
                <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.title }}">

                <h1 class="text-center my-3 display-5"><i class="fa-solid fa-feather-pointed"></i></i>{{post.title}}</h1>

            {% endif %}
            <small>Créé le {{post.createdAt|date()}}</small>
            <small>| Modifié le {{post.updatedAt|date()}}</small>
            {% if post.published %}
                <small>| Plublié le {{post.published|date()}}</small>
            {% endif %}
        </div>

        <div class="my-3">
            {{post.content|nl2br}}
        </div>


        

    </div>
    
    
{% endblock %}